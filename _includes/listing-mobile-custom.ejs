<%
const params = templateParams || {};
const cols = params['grid-columns'] || 1;
const align = params['grid-item-align'] || 'left';
const bordered = params['grid-item-border'] !== false;
const noteLabel = params['note-label'] || 'Note#';
%>
<div class="list grid quarto-listing-cols-<%= cols %>">
<% for (const item of items) { %>
<% const spotlightRaw = (item.spotlight || "").trim();
   const hasSpotlight = spotlightRaw.length > 0;
   const href = item.outputHref || item.path;
%>
<div class="g-col-1" <%= metadataAttrs(item) %>>
<a href="<%- href %>" class="quarto-grid-link">
<div class="quarto-grid-item card h-100 card-<%- align %><%= bordered ? '' : ' borderless' %>">
<div class="card-body post-contents">
<h5 class="no-anchor card-title listing-title"><%= item.title %></h5>
<div class="card-attribution card-text-small end">
<div class="listing-date"><%- item.date || '' %></div>
</div>
<div class="mobile-meta">
<span class="note-label"><%= noteLabel %></span>
<span class="listing-id"><%= item.id || '' %></span>
</div>
<% if (hasSpotlight) { %>
<div class="mobile-spotlight listing-spotlight" aria-label="Spotlight"><%= spotlightRaw %></div>
<% } %>
</div>
</div>
</a>
</div>
<% } %>
</div>
